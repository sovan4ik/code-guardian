{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,

    "esModuleInterop": true,

    "sourceMap": true,
    "removeComments": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "typing.d.ts"],
  "exclude": ["node_modules", "dist"]
}
